<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="10 seconds">
    <contextName>resale-api</contextName>
    <property name="LOG_NAME_DBG" value="debug" />
    <property name="LOG_HOME" value="${BUILD_PATH}/logs/" />
    <property name="LOGBAK_HOME" value="${BUILD_PATH}/logs/back/" />
    <property name="LogPattern"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5p %-40.40logger{40} - %msg %n"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5p) %-40.40logger{40} - %yellow(%msg) %n</Pattern>
        </layout>
    </appender>

    <appender name="info" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Append>true</Append>
        <File>${LOG_HOME}api-server-info.log</File>
        <encoder>
            <pattern>${LogPattern}</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGBAK_HOME}damoa-api-server/info.%d{yyyyMMdd}.${HOSTNAME}.log</fileNamePattern>
        </rollingPolicy>
    </appender>

    <appender name="debug" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Append>true</Append>
        <File>${LOG_HOME}api-server-debug.log</File>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}] [%18.-18contextName] [%-5.5p] [%-20.20t] %-40.40logger{40} - %m%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOGBAK_HOME}damoa-api-server/debug.%d{yyyyMMdd}.${HOSTNAME}.log</fileNamePattern>
        </rollingPolicy>
    </appender>

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="info" />
        <appender-ref ref="debug" />
    </root>

</configuration>
