<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %t %-5p %logger.%method\(%F:%L\) - %msg %n</Pattern>
        </layout>
    </appender>
    
    <logger name="kr.co.finger.damoa" level="DEBUG" />
    <logger name="kr.co.finger.shinhandamoa" level="TRACE" />
    <logger name="com.finger.shinhandamoa" level="DEBUG" />
    <logger name="com.finger.shinhandamoa" level="DEBUG" />
    <logger name="scheduler" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
